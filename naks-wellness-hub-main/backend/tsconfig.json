{
    "compilerOptions": {
      "target": "ES2020",                // Use modern JavaScript features
      "module": "ESNext",                // Use ESM (ECMAScript Modules)
      "moduleResolution": "node",        // Resolve modules like Node.js does
      "esModuleInterop": true,           // Allow default imports from CommonJS modules
      "outDir": "./dist",                // Specify output directory for compiled code
      "strict": true,                    // Enable strict type checking
      "skipLibCheck": true,              // Skip library checks to speed up compilation
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src/**/*.ts"                      // Only compile TypeScript files in the src folder
    ],
    "exclude": [
      "node_modules"                     // Exclude node_modules
    ]
  }
  